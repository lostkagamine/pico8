pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
buttons = {
	{
		x={10,100},
		y={50,70},
		l="stretch the screen",
		c=
		function() 
			poke(0x5f2c,1)
		end
	}
}

click=false

function _init()
	poke(0x5f2d, 1)
end

function _update()
	local mx=stat(32)
	local my=stat(33)
	for i,j in pairs(buttons) do
		if (mx>j.x[1] and mx<j.x[2]) and
					(my>j.y[1] and my<j.y[2]) and
					(stat(34)==1) then
			if click then return end
			if j.c then j.c() end
			click=true
		end
	end
	if stat(34)~=1 then click=false end
end

function _draw()
	cls()
	spr(1, stat(32), stat(33))
	for i,j in pairs(buttons) do
		rect(j.x[1],j.y[1],j.x[2],j.y[2])
		print(j.l,(j.x[2]/2)-#j.l*1.5,j.y[2]/1.2)
	end
	print("mouse engine by @ry00001_",0,128-10)
end
